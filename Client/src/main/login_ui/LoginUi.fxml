<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controller.LoginController">
   <children>
      <Label layoutX="35.0" layoutY="38.0" text="아이디" />
      <TextField fx:id="userId" layoutX="104.0" layoutY="34.0" promptText="아이디를 입력하세요." />
      <Label layoutX="29.0" layoutY="80.0" text="비밀번호" />
      <PasswordField fx:id="userPwd" layoutX="104.0" layoutY="76.0" promptText="비밀번호를 입력하세요." />
      <CheckBox fx:id="adminCheck" layoutX="46.0" layoutY="121.0" mnemonicParsing="false" text="관리자로그인" />
      <CheckBox fx:id="userCheck" layoutX="166.0" layoutY="121.0" mnemonicParsing="true" text="사용자로그인" />
      <Button fx:id="loginBtn" layoutX="67.0" layoutY="159.0" mnemonicParsing="false" text="로그인" onAction="#handleLoginBtn"/>
      <Button fx:id="registerBtn" layoutX="181.0" layoutY="159.0" mnemonicParsing="false" text="회원가입" onAction="#handleRegisterBtn"/>
   </children>
</AnchorPane>
