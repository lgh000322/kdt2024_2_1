<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="center" padding="10">
    <TextArea fx:id="chatArea" prefHeight="400" prefWidth="600" editable="false"/>
    <TextField fx:id="inputField" prefWidth="500"/>
    <Button text="Send" onAction="#handleSend"/>
</VBox>
