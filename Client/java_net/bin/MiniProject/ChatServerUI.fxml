<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="TOP_LEFT">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Server Log:"/>
    <TextArea fx:id="logArea" editable="false" prefHeight="300"/>
    <Button fx:id="startButton" text="Start Server" onAction="#startServer"/>
</VBox>
