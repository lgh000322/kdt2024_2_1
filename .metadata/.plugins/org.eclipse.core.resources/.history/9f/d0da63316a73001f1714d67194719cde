package main.dto.answer_dto;

import java.time.LocalDate;

public class AnswerInBoardDto {
    private String answerUserId;   // 댓글 작성자 ID
    private String answerContent;  // 댓글 내용
    private Long boardNo;          // 게시글 번호
    private LocalDate createdDate; // 댓글 작성일

    // Getters
    public String getAnswerUserId() {
        return answerUserId;
    }

    public String getAnswerContent() {
        return answerContent;
    }

    public Long getBoardNo() {
        return boardNo;
    }

    public LocalDate getCreatedDate() {
        return createdDate;
    }

    // Constructor using Builder pattern
    public AnswerInBoardDto(Builder builder) {
        this.answerContent = builder.answerContent;
        this.answerUserId = builder.answerUserId;
        this.boardNo = builder.boardNo;
        this.createdDate = builder.createdDate;
    }

    // Builder class
    public static class Builder {
        private String answerUserId;
        private String answerContent;
        private Long boardNo;
        private LocalDate createdDate;

        public Builder answerUserId(String answerUserId) {
            this.answerUserId = answerUserId;
            return this;
        }

        public Builder answerContent(String answerContent) {
            this.answerContent = answerContent;
            return this;
        }

        public Builder boardNo(Long boardNo) {
            this.boardNo = boardNo;
            return this;
        }

        public Builder createdDate(LocalDate createdDate) {
            this.createdDate = createdDate;
            return this;
        }

        public AnswerInBoardDto build() {
            return new AnswerInBoardDto(this);
        }
    }
}
